<?xml version="1.0"?>
<tool name="RGHapMapBioMart" id="hmbiomart">
	
	<description>HapMart</description>
	
	<command/>
	
	<inputs action="http://hapmart.hapmap.org/BioMart/martview" check_values="false" method="get" target="_top">
		<display>go to HapMart Central $GALAXY_URL</display>
		<param name="GALAXY_URL" type="baseurl" value="/tool_runner/biomart" />
	</inputs>
	
	<code file="rghapmapBiomart_filter.py"/>
	
	<outputs>
		<data name="output" format="txt" />
	</outputs>
	
	<options sanitize="False" refresh="True"/>

</tool>

