<tool id="EMBOSS: hmoment44" name="hmoment">
  <description>Hydrophobic moment calculation</description>
  <command>hmoment -seqall $input1 -outfile $out_file1 -window $window -aangle $aangle -auto</command>
  <inputs>
    <param format="data" name="input1" type="data">
      <label>Sequences</label>
    </param>
    <param name="window" size="5" type="text" value="10">
      <label>Window</label>
    </param>
    <param name="aangle" size="5" type="text" value="100">
      <label>Alpha helix angle (degrees)</label>
    </param>
  </inputs>
  <outputs>
    <data format="txt" name="out_file1" />
  </outputs>
  <help>
    You can view the original documentation here_.
    
    .. _here: http://emboss.sourceforge.net/apps/release/4.0/emboss/apps/hmoment.html
  </help>
</tool>